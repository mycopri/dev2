; $Id

name = Fusion Student
description = Fusion Student sub-theme for Drupal 6.
base theme = fusion_core
core = 6.x
engine = phptemplate

stylesheets[all][] = css/fusion-freshstart-style.css
stylesheets[all][] = css/master.css

scripts[] = js/fusion-freshstart-script.js

regions[sidebar_first] = sidebar first
regions[sidebar_last] = sidebar last
regions[header_top] = header top
regions[header] = header
regions[preface_top] = preface top
regions[preface_bottom] = preface bottom
regions[content_top] = content top
regions[content] = content
regions[content_bottom] = content bottom
regions[postscript_top] = postscript top
regions[postscript_bottom] = postscript bottom
regions[footer] = footer
regions[node_top] = node top
regions[node_bottom] = node bottom

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

; Default theme settings
settings[theme_grid] = grid12-960
settings[theme_grid_options][] = grid12-960
settings[theme_grid_options][] = grid12-fluid
settings[fluid_grid_width] = fluid-100
settings[theme_font_size] = font-size-14
settings[sidebar_layout] = sidebars-split
settings[sidebar_first_width] = 4
settings[sidebar_last_width] = 4

; Inherit Skinr styles from parent themes
skinr[options][inherit_skins] = true

; Disable 16 column grid block widths inherited from fusion_core
skinr[grid16-width] =

; Fresh Start styles
skinr[freshstart-general-styles][title] = Fresh Start - General Styles
skinr[freshstart-general-styles][type] = checkboxes
skinr[freshstart-general-styles][features][] = block
skinr[freshstart-general-styles][features][] = panels_display
skinr[freshstart-general-styles][features][] = panels_pane
skinr[freshstart-general-styles][features][] = panels_panel
skinr[freshstart-general-styles][features][] = views_view
skinr[freshstart-general-styles][options][1][label] = <span class="preview-text">List/menu with arrows: add list/menu style with arrow bullets and background shading on hover <span class="preview-icon" id="list-menu-arrow-skinrpreview"></span></span>
skinr[freshstart-general-styles][options][1][class] = list-menu-arrow
skinr[freshstart-general-styles][options][2][label] = <span class="preview-text">Image borders: add thick gray border on images <span class="preview-icon" id="image-border-skinrpreview"></span></span>
skinr[freshstart-general-styles][options][2][class] = image-border

; Fresh Start color styles
skinr[freshstart-color-styles][title] = Fresh Start - Color Styles
skinr[freshstart-color-styles][type] = radios
skinr[freshstart-color-styles][features][] = block
skinr[freshstart-color-styles][features][] = panels_display
skinr[freshstart-color-styles][features][] = panels_pane
skinr[freshstart-color-styles][features][] = panels_panel
skinr[freshstart-color-styles][features][] = views_view
skinr[freshstart-color-styles][options][1][label] = <span class="preview-text">Light blue: light blue background and blue title <span class="preview-icon" id="color-blue-light-skinrpreview"></span></span>
skinr[freshstart-color-styles][options][1][class] = color-blue-light
skinr[freshstart-color-styles][options][2][label] = <span class="preview-text">Light green: light green background and green title <span class="preview-icon" id="color-green-light-skinrpreview"></span></span>
skinr[freshstart-color-styles][options][2][class] = color-green-light
skinr[freshstart-color-styles][options][3][label] = <span class="preview-text">Blue: bright blue background, dark blue title, and large white text <span class="preview-icon" id="color-blue-dark-skinrpreview"></span></span>
skinr[freshstart-color-styles][options][3][class] = color-blue-dark color-bright
skinr[freshstart-color-styles][options][4][label] = <span class="preview-text">Green: bright green background, dark green title, and large white text <span class="preview-icon" id="color-green-dark-skinrpreview"></span></span>
skinr[freshstart-color-styles][options][4][class] = color-green-dark color-bright
skinr[freshstart-color-styles][options][5][label] = <span class="preview-text">Orange: bright orange background, dark orange title, and large white text <span class="preview-icon" id="color-orange-skinrpreview"></span></span>
skinr[freshstart-color-styles][options][5][class] = color-orange color-bright
skinr[freshstart-color-styles][options][6][label] = <span class="preview-text">Gray: gray gradient background and border <span class="preview-icon" id="color-gradient-gray-skinrpreview"></span></span>
skinr[freshstart-color-styles][options][6][class] = color-gradient-gray
skinr[freshstart-color-styles][options][7][label] = <span class="preview-text">Full width banner: leaves and plant in hand background, large text in overlay <span class="preview-icon" id="color-leaves-skinrpreview"></span></span> 
