skinr[freshstart-color-styles][options][9][label] = <span class="preview-text">Full width banner: COPRI, large text in overlay <span class="preview-icon" id="color-copri-skinrpreview"></span></span> 
skinr[freshstart-color-styles][options][9][class] = color-copri

