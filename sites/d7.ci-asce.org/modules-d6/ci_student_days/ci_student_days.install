/**
 * Implementation of hook_uninstall().
 */
function ci_student_days_uninstall() {
  // Remove all database tables.
  drupal_uninstall_schema('ci_student_days');
}

function ci_student_days_install() {
	drupal_install_schema('ci_student_days');
	db_query("UPDATE {system} SET weight = 1000 WHERE name = 'ci_student_days'");
}

